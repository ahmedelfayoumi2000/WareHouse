@model WareHouse__management_System.View_Model.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="text-center">Create</h1>

    <h4 class="text-center">Product</h4>
    <hr />

    <div class="d-flex justify-content-center">

        <div class="col-md-4">
            <form method="post" asp-controller="Products" asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <partial name="PViews/CreateEditProductPartialView" />
                <div class="form-group ">
                    <label asp-for="Categories" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="@Model.Categories">
                        <option disabled selected> -- Select Category -- </option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="d-flex mt-3">
                    <input type="submit" value="Create" class="btn btn-info" />
                    <a asp-action="Index" class="btn btn-success button-link">Back to List</a>
                </div>

            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}