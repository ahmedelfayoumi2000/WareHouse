@model WareHouse__management_System.Models.Product

@{
    ViewData["Title"] = "Details";
}


<div class="container">
    <h1 class="text-center">Details</h1>

    <div>
        <h4 class="text-center">Product</h4>
        <hr />
        <div class="row justify-content-center">
            <!-- إضافة الـjustify-content-center هنا -->
            <dl class="row">
                <partial name="PViews/DeleteDetailsProductPartialView" />
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.category)
                </dt>
                <dd class="col-sm-10 ">
                    @Html.DisplayFor(model => model.category.Name)
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success button-link">Edit</a>
        <a asp-action="Index" class="btn btn-danger button-link">Back to List</a>

    </div>

</div>