@* @model IEnumerable<WareHouse__management_System.Models.Category>  *@
@* @model IEnumerable<WareHouse__management_System.View_Model.CategoryViewModel> *@
@model IEnumerable<CategoryViewModel> 

@{
    ViewData["Title"] = "Index";
}
 
<div class="text-center">
    <h1>Categories</h1>
</div>

<p>
    <a asp-action="Create" class="btn btn-info button-link">Create New</a>
</p>
@if(Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <partial name="_ButtonsPartialView" model="@item.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3" role="alert">
        <i class="fas fa-info-circle"></i> There is NO Categories!!
    </div>
}
